<section>
  <div>
    <div class="container text-center">
      <div>
        <h3 class="title text-black">Login</h3>
        <hr class="login-hr">
        <p class="subtitle text-black">Welcome back! Please login!</p>
        <div class="box">
          <form>
            <div class="field">
              <div class="control" id="username-div">
                <input class="input is-medium" type="text" placeholder="Username" id="user-name">
              </div>
            </div>

            <div class="field">
              <div class="control" id="password-div">
                <input class="input is-medium" type="password" placeholder="Your Password" id="password">
              </div>
            </div>
            <button class="button is-info is-fullwidth" id="login-btn">Login <i class="fa fa-sign-in"
                aria-hidden="true"></i></button>
          </form>
        </div>
        <p>
          <a href="/signup">Sign up Instead</a>
        </p>
      </div>
    </div>
  </div>
</section>

