<nav class="navbar">
  <div class="container">
    <div class="navbar-brand">
      <h1 class="navbar-item text-dark fs-1 fw-bold">Tech Talk</h1>
    </div>
    <div id="navbarMenu" class="navbar-menu text-dark fs-6 fw-bold">
      <div class="navbar-end">
        <a class="navbar-item is-active" href="/">Home</a>
        <a class="navbar-item" href="/dashboard">Dashboard</a>
        {{#if logged_in}}
        <a class="navbar-item" id="logout">Logout</a>
        {{else}}
        <a class="navbar-item" href="/login">Login</a>
        {{/if}}
      </div>
    </div>
  </div>
</nav>

<section class="hero bg-info is-small">
  <div class="hero-body">
    <div class="container text-center">
      <h1 class="title text-dark">Dashboard</h1>
    </div>
  </div>
</section>

 <div class="text-center">
        <button class="button bg-info mt-5 js-modal-trigger text-dark fs-6 fw-bold" data-target="add-post-modal">Add New Post</button>
  </div>

<div class="container">
  <section class="articles">
    <div class="column is-8 is-offset-2">
      {{#each userPosts as |post| }}
      <div class="card article">
        <div class="card-content">
          <div>
            <h3><a href="./dashboard/{{post.id}}">{{post.title}}</a></h3>
            <div>
              <h4 class="text-end fw-bold"> Posted on {{formDate post.createdAt}}</h4>
            </div>
          </div>
          <div>
            <p>{{post.contents}}</p>
          </div>
          <div class="update-delete-div text-end">

          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </section>
</div>

<div id="add-post-modal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box">   
      <input class="input" type="text" placeholder="Title" id="modal-title-input">
      <textarea class="textarea mt-5" placeholder="Content:" id="modal-content-textarea"></textarea>
      <div>
        <button class="button bg-info mt-5" id="add-post"> Add Post</button>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="/js/login.js"></script>
  <script src="/js/logout.js"></script>
  <script src="/js/modal.js"></script>
  <script src="/js/addPost.js"></script>