          <form>
            <div class="field">
              <div class="control" id="username-div">
                <input class="input is-medium" type="text" placeholder="Username" id="signup-username">
              </div>
            </div>
            <p>Password must be at least 8 characters</p>
            <div class="field">

              <div class="control" id="password-div">

                <input class="input is-large" type="password" placeholder="Your Password" id="signup-password">
              </div>
            </div>

            <button class="button is-info is-fullwidth" id="signup-btn">Signup</button>
          </form>
        </div>
        <p>
          <a href="/login">Login Instead</a>
        </p>
      </div>
    </div>
  </div>
</section>

